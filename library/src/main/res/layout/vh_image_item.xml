<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/vh_album_image"
        android:layout_width="match_parent"
        android:layout_height="115dip"
        fresco:failureImage="@drawable/shape_image_bg"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/shape_image_bg"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@drawable/shape_image_bg"
        fresco:retryImageScaleType="centerCrop" />

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/vh_album_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:scaleType="center" />

</FrameLayout>
