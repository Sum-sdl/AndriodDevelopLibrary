    <com.sum.library.view.widget.SwipeItemLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:swipe_drag_distance="120dp">

        <LinearLayout
            android:id="@+id/layer_hide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#abc"
                android:gravity="center"
                android:text="收藏" />

            <TextView
                android:id="@+id/tv_d"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#abc"
                android:gravity="center"
                android:text="删除" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/layer_touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#81d9b1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_text" />

        </FrameLayout>


    </com.sum.library.view.widget.SwipeItemLayout>

    <com.sum.library.view.widget.SwipeItemLayout
        android:id="@+id/item_contact_swipe_root"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        app:bga_sil_bottomMode="pullOut"
        app:bga_sil_springDistance="20dp"
        app:bga_sil_swipeDirection="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/item_contact_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_contact_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="用户辩题"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>

    </com.sum.library.view.widget.SwipeItemLayout>


</LinearLayout>
