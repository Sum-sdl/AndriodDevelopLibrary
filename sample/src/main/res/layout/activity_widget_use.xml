<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sum.library.view.widget.PubTitleView
        android:id="@+id/pub_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="White Model" />

    <com.sum.library.view.widget.PubTitleView
        android:id="@+id/pub_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title_name="Dark Model"
        app:title_white="true" />

    <TextView
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="FragmentCacheManager测试使用" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/anim4"
        android:text="5.0过场动画" />


    <com.sum.library.view.widget.PubEmptyView
        android:id="@+id/pub_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pub_empty_img="@mipmap/ic_launcher"
        app:pub_empty_text="@string/app_name" />

</LinearLayout>
