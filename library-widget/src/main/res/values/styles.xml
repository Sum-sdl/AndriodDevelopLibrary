<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--对话框的Activity-->
    <style name="dialog_activity" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--水平-->
    <style name="pub_line_hor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/pub_line_height</item>
        <item name="android:background">@color/pub_line_color</item>
    </style>

    <!--垂直-->
    <style name="pub_line_ver">
        <item name="android:layout_width">@dimen/pub_line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/pub_line_color</item>
    </style>


    <!--子类覆盖样式-->
    <style name="lib_style_pub_empty_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="lib_style_choose_dialog_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="lib_style_choose_dialog_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="lib_style_pub_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/pub_title_height</item>
        <item name="android:layout_marginEnd">@dimen/pub_title_height</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/pub_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/pub_title_text_color</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--底部操作栏-->
    <style name="lib_style_tab_item_imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="lib_style_tab_item_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>