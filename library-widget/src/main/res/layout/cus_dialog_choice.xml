<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fl_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:background="@drawable/shape_code_dialog_bg"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:orientation="vertical"
			android:paddingTop="12dip"
			android:paddingBottom="32dip">

			<TextView
				android:id="@+id/choice_container_title"
				style="@style/lib_style_choose_dialog_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dip"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="20dip"
				android:gravity="center"
				android:includeFontPadding="false"
				android:lineSpacingExtra="7dip"
				android:visibility="gone" />

			<TextView
				android:id="@+id/choice_container_content"
				style="@style/lib_style_choose_dialog_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginStart="25dip"
				android:layout_marginTop="22dp"
				android:layout_marginEnd="25dip"
				android:gravity="center"
				android:includeFontPadding="false"
				android:lineSpacingExtra="3dip"
				android:minHeight="30dip"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<View
				android:layout_width="match_parent"
				android:layout_height="1dip"
				android:background="#e5e5e5" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="44dip"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/choice_container_negative"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/shape_code_dialog_btn"
					android:gravity="center"
					android:text="取消"
					android:textColor="@color/lib_dialog_choose_cancel_color"
					android:textSize="14sp" />

				<View
					android:id="@+id/choice_container_line"
					android:layout_width="1dip"
					android:layout_height="match_parent"
					android:background="#e5e5e5" />

				<TextView
					android:id="@+id/choice_container_positive"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@drawable/shape_code_dialog_btn"
					android:gravity="center"
					android:text="确定"
					android:textColor="@color/lib_dialog_choose_ok_color"
					android:textSize="14sp" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>