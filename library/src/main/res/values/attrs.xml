<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--侧滑删除布局-->
    <declare-styleable name="BGASwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0" />
            <enum name="layDown" value="1" />
        </attr>
        <attr name="bga_sil_springDistance" format="dimension" />
        <attr name="bga_sil_swipeAble" format="boolean" />
    </declare-styleable>

    <!--下来刷新-->
    <declare-styleable name="SwipeLayout">
        <attr name="swipe_direction" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="swipe_drag_distance" format="dimension" />
    </declare-styleable>


    <!--组合复选框-->
    <!--reference 参考某一个资源id string integer dimension(dip) float(0.7)-->
    <!--color 颜色 enum 枚举值 boolean (true/false)-->
    <declare-styleable name="MultiRadioButton">
        <attr name="multiChecked" format="boolean" />
        <attr name="multiText" format="reference|string" />
        <attr name="multiColorDefault" format="reference|color" />
        <attr name="multiColorChecked" format="reference|color" />
        <attr name="multiDrawableDefault" format="reference" />
        <attr name="multiDrawableChecked" format="reference" />
    </declare-styleable>

    <!--自定义滑动选择view-->
    <declare-styleable name="ChooseView">
        <attr name="workPaddingToLine" format="dimension" />
        <attr name="workTextSize" format="dimension" />
        <attr name="workTextColorNor" format="reference|color" />
        <attr name="workTextColorSelected" format="reference|color" />
        <attr name="workLineColorNor" format="reference|color" />
        <attr name="workLineColorSelected" format="reference|color" />
    </declare-styleable>


    <!--通用头部布局-->
    <declare-styleable name="PubTitleView">
        <attr name="title_view" format="reference" />
        <attr name="title_name" format="string" />
        <attr name="title_white" format="boolean" />
    </declare-styleable>


    <!--通用数据空View-->
    <declare-styleable name="PubEmptyView">
        <attr name="pub_empty_layout" format="reference" />
        <attr name="pub_empty_text" format="string" />
        <attr name="pub_empty_img" format="reference" />
        <attr name="pub_empty_bg_color" format="reference|color" />
    </declare-styleable>

</resources>