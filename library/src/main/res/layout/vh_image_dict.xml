<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/adapter_dict_cover"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginEnd="10dip"
        fresco:failureImage="@mipmap/ic_default_image"
        fresco:failureImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/ic_default_image"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:retryImage="@mipmap/ic_default_image"
        fresco:retryImageScaleType="focusCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_dict_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_dict_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
