<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/adapter_dict_cover"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_image_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/adapter_dict_cover"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_dict_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_dict_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        style="@style/pub_line_hor"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
