<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/pub_title_content"
	android:layout_width="match_parent"
	android:layout_height="@dimen/pub_title_height">

	<ImageView
		android:id="@id/pub_title_back"
		android:layout_width="@dimen/pub_title_height"
		android:layout_height="@dimen/pub_title_height"
		android:layout_gravity="start"
		android:scaleType="center"
		android:src="@mipmap/lib_ic_black_arrow" />

	<TextView
		android:id="@id/pub_title_text"
		style="@style/lib_style_pub_title_text" />

	<LinearLayout
		android:id="@id/pub_title_right"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="end"
		android:gravity="end|center_vertical"
		android:orientation="horizontal" />

</FrameLayout>