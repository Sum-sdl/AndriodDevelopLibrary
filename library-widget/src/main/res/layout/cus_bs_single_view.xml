<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_title_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bsv_title_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/pub_cancel"
            android:textColor="@color/bsv_title_cancel_color" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/bsv_title_title_color" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/pub_confirm"
            android:textColor="@color/bsv_title_confirm_color" />

    </LinearLayout>

    <View
        android:id="@+id/title_line"
        style="@style/pub_line_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bsv_content_height"
        android:gravity="center"
        android:orientation="horizontal">

        <com.sum.library.view.widget.wheelview.LoopView
            android:id="@+id/loop_view_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sum.library.view.widget.wheelview.LoopView
            android:id="@+id/loop_view_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sum.library.view.widget.wheelview.LoopView
            android:id="@+id/loop_view_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sum.library.view.widget.wheelview.LoopView
            android:id="@+id/loop_view_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.sum.library.view.widget.wheelview.LoopView
            android:id="@+id/loop_view_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>