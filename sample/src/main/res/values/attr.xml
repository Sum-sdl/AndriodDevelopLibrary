<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RangeBar">

        <attr name="lineHeight" format="dimension" />

        <!-- 底部颜色 -->
        <attr name="lineColor" format="color" />

        <!-- 第二颜色 -->
        <attr name="lineSecondColor" format="color" />

        <!-- 最大值 -->
        <attr name="maxValue" format="integer" />

        <!--最小单位-->
        <attr name="minUnit" format="integer" />

        <!--图标-->
        <attr name="thumbRes" format="reference" />

    </declare-styleable>



    <!--自定义滑动选择view-->
    <declare-styleable name="ChooseView">
        <attr name="workPaddingToLine" format="dimension" />
        <attr name="workTextSize" format="dimension" />
        <attr name="workTextColorNor" format="reference|color" />
        <attr name="workTextColorSelected" format="reference|color" />
        <attr name="workLineColorNor" format="reference|color" />
        <attr name="workLineColorSelected" format="reference|color" />
    </declare-styleable>

    <!--侧滑删除布局-->
    <declare-styleable name="BGASwipeItemLayout">
        <attr name="bga_sil_swipeDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bga_sil_bottomMode" format="enum">
            <enum name="pullOut" value="0" />
            <enum name="layDown" value="1" />
        </attr>
        <attr name="bga_sil_springDistance" format="dimension" />
        <attr name="bga_sil_swipeAble" format="boolean" />
    </declare-styleable>

</resources>