<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/fl_take_result"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/black"
	android:clickable="true"
	android:focusable="true"
	android:orientation="vertical"
	android:visibility="gone">

	<com.github.chrisbanes.photoview.PhotoView
		android:id="@+id/photo_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginBottom="15dp"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="20dp"
		android:paddingRight="20dp">

		<TextView
			android:id="@+id/tv_take_cancel"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:gravity="center"
			android:text="取消"
			android:textColor="@drawable/shape_text_color"
			android:textSize="16sp" />

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1">


			<TextView
				android:id="@+id/tv_take"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_gravity="center"
				android:background="@drawable/lib_camera_circle_white"
				android:gravity="center"
				android:text="重拍"
				android:textColor="@drawable/shape_text_color"
				android:textSize="16sp" />
		</FrameLayout>

		<TextView
			android:id="@+id/tv_take_conform"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:gravity="center"
			android:text="确定"
			android:textColor="@drawable/shape_text_color"
			android:textSize="16sp" />

	</LinearLayout>
</FrameLayout>
