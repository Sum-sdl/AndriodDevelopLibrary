<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_home_b_car" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_home_b_classify" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_home_b_home" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改View高度" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100" />


    <com.sum.library.view.widget.MultiRadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.sum.library.view.widget.MultiRadioButton
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:multiColorChecked="@color/colorPrimaryDark"
            app:multiColorDefault="@color/colorAccent"
            app:multiDrawableDefault="@drawable/icon_home_b_home"
            app:multiText="Type1" />

        <com.sum.library.view.widget.MultiRadioButton
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:multiColorChecked="@color/colorPrimaryDark"
            app:multiColorDefault="@color/colorAccent"
            app:multiDrawableChecked="@drawable/icon_home_b_classify"
            app:multiDrawableDefault="@drawable/icon_home_b_car"
            app:multiText="Type2" />

        <com.sum.library.view.widget.MultiRadioButton
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:multiColorChecked="@color/colorPrimaryDark"
            app:multiColorDefault="@color/colorAccent"
            app:multiDrawableDefault="@drawable/icon_home_b_my"
            app:multiText="Type3" />

    </com.sum.library.view.widget.MultiRadioGroup>

</LinearLayout>