<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sum.library.view.widget.PubTitleView
        android:id="@id/pub_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_name="选择图片" />

    <View style="@style/line_hor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/ll_album_op"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#2e3335"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_album_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:drawableEnd="@mipmap/ic_text_indicator"
            android:drawablePadding="3dp"
            android:focusable="true"
            android:gravity="center"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:text="所有图片"
            android:textColor="@drawable/shape_text_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_album_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="预览"
            android:textColor="@drawable/shape_text_color" />


    </LinearLayout>

</LinearLayout>
