<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="RecyclerView 浮动头部"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/b20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WindowManager" />

        <Button
            android:id="@+id/b23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Api依赖倒置测试" />

        <Button
            android:id="@+id/b19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI 卡顿 BlockCanary" />

        <Button
            android:id="@+id/b17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JSBridge测试" />
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络请求模块" />

        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刷新和侧滑删除使用" />

        <Button
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义View" />

        <Button
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog 功能测试" />

        <Button
            android:id="@+id/b6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="apk快速下载" />

        <Button
            android:id="@+id/b7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="屏幕自动适配-AutoSize" />

        <Button
            android:id="@+id/b8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lib包中组件功能测试" />

        <Button
            android:id="@+id/b9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lib-UI功能界面" />

        <Button
            android:id="@+id/b12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service 测试使用" />

        <Button
            android:id="@+id/b13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据加密" />

        <Button
            android:id="@+id/b14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lifecycle框架测试" />

        <Button
            android:id="@+id/b21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View-Delegate结构测试" />

        <Button
            android:id="@+id/b18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="协程测试" />

        <Button
            android:id="@+id/b16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SurfaceView测试" />


        <Button
            android:id="@+id/b15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="下载，打开文件" />

        <TextView
            android:id="@+id/tv_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/b22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ProtoFileTest" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
